    <LinearLayout
        android:id="@+id/detail_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NE3.0m/s"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="WIND"
                android:textSize="9sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="59%"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="HUMIDITY"
                android:textSize="9sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_feel_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7°"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="FEELS LIKE"
                android:textSize="9sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_uv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Low"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="UV"
                android:textSize="9sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="40dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8KM"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="VISIBILITY"
                android:textSize="9sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_pm25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1026.0hPa"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="PM25"
                android:textSize="9sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_pm10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1°"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="PM10"
                android:textSize="9sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:id="@+id/tv_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="163"
                android:textSize="18sp"
                auto:style="OswaldRegular"/>

            <com.zhangyangjing.weather.ui.widget.StyleTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="AQI"
                android:textSize="9sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
